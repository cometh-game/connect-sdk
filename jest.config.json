{
  "roots": ["<rootDir>/"],
  "testMatch": ["**/?(*.)+(spec|test).+(ts|tsx)"],
  "transform": {
    "\\.(ts)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "setupFiles": ["<rootDir>/jest.setup.ts"],
  "modulePathIgnorePatterns": ["<rootDir>/build"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  }
}
