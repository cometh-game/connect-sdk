{
  "roots": ["<rootDir>/"],
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "modulePathIgnorePatterns": ["<rootDir>/build"],
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "projects": [
    {
      "displayName": "dom",
      "testEnvironment": "jsdom",
      "transform": {
        "\\.(ts)$": "ts-jest"
      },
      "testMatch": ["**/?(*.)+(spec|test).dom.+(ts|tsx|js)"]
    },
    {
      "displayName": "node",
      "testEnvironment": "node",
      "transform": {
        "\\.(ts)$": "ts-jest"
      },
      "testMatch": [
        "**/?(*.)+(spec|test).+(ts|tsx|js)"
      ]
    }
  ]
}
